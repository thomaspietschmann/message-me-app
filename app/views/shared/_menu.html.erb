<div class="ui teal large inverted menu">
  <div class="ui container">
    <div class="header active item">
      TomChat
    </div>
    <%= link_to "Chatroom", root_path, class: "item" %>
    <a class="item">
      Messages
    </a>
    <a class="item">
      Friends
    </a>
    <div class="right menu">
      <div class="ui dropdown item">
        Account <i class="dropdown icon"></i>
        <div class="menu">
          <% if logged_in? %>
            <%= link_to "Log out", logout_path, class: "item", method: :delete %>
          <% else %>
            <%= link_to "Log in", login_path, class: "item" %>
          <% end %>
        </div>
      </div>
      <% if !logged_in? %>
        <div class="item">
          <%= link_to "Login", login_path, class: "ui yellow button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
