<h4 class="ui center aligned medium icon header">
  <i class="circular unlock alternate icon inverted yellow"></i>
  Log in to continue
</h4>
<div class="ui placeholder segment fluid raised">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <div class="ui form">
        <%= form_for :session do |f| %>
          <div class="field">
            <%= f.label :username, "Username" %>
            <div class="ui left icon input">
              <%= f.text_field :username, placeholder: "Username" %>
              <i class="user icon"></i>
            </div>
          </div>
          <div class="field">
            <%= f.label :password, "Password" %>
            <div class="ui left icon input">
              <%= f.text_field :password, placeholder: "Password" %>
              <i class="lock icon"></i>
            </div>
          </div>
          <%= f.button "Login", class: "ui yellow submit button" %>
        <% end %>
      </div>
    </div>
    <div class="middle aligned column">
      <div class="ui big yellow button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
